<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <title>Dashboard - Top Prop Mart</title>
		<% include ./common/header-script %>
    </head>
    <body>
        <div class="main-wrapper">
            <% include ./common/header %>
            <% include ./common/side-menu %>
            <div class="page-wrapper">
                <div class="content container-fluid">
					<div class="row " style="margin-bottom: 20px;">
						<div class="col-md-12">
							<div class="adminpage-heading">
                                <div>
                                    <h2>All Users</h2>
                                </div>
                                <div class="btn-add">
                                    <a href="/admin/add-user" >Add User</a>
                                </div>
                            </div>
						</div>
					</div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="allusers" class="display table table-striped custom-table m-b-0" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Mobile</th>
                                            <th>About</th>
                                            <th>Profile Image</th>
                                            <th>User Type</th>
                                            <th>Status</th>
                                            <th class="text-right">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody style="min-height: 200px;">
                                        <% if(allUser){
                                            allUser.forEach((item,index)=>{ %>
                                                <tr>
                                                    <td><%= item.id %></td>
                                                    <td style="min-width:200px;">
                                                        <!-- <a href="#" class="avatar">S</a> -->
                                                        <h2><a href="/admin/user-profile/<%= item.id %>"><%= item.name %></a></h2>
                                                    </td>
                                                    <td><%= item.email %></td>
                                                    <td><%= item.mobile %></td>
                                                    <td><%= item.about %></td>
                                                    <td>
                                                        <div style="height: 60px; width: 60px;">
                                                            <img src="/public/assets/img/user-02.jpg" alt="" style="border-radius: 50%; width: 100%;">
                                                        </div>
                                                    </td>
                                                    <td><%=item.usertype %></td>
                                                    <td>
                                                        <div class="dropdown action-label">
                                                            <a class="btn btn-white btn-sm rounded dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-dot-circle-o text-success"></i> Active <i class="caret"></i>
                                                            </a>
                                                            <ul class="dropdown-menu pull-right">
                                                                <li><a href="#" data-toggle="modal" data-target="#block_user"><i class="fa fa-dot-circle-o text-success"></i> Active</a></li>
                                                                <li><a href="#" data-toggle="modal" data-target="#block_user"><i class="fa fa-dot-circle-o text-danger"></i> Inactive</a></li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                    <td class="text-right">
                                                        <div class="dropdown">
                                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                            <ul class="dropdown-menu pull-right">
                                                                <li><a href="#" data-toggle="modal" data-target="#edit_user" title="Edit"><i class="fa fa-pencil m-r-5"></i>Edit</a></li>
                                                                <li><a href="#" data-toggle="modal" data-target="#delete_user" title="Delete"><i class="fa fa-trash-o m-r-5"></i> Delete</a></li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% });
                                            }%>
                                    </tbody>
                                </table>  
                            </div>
                        </div>
                    </div>
				</div>
				<% include ./common/side-notification %>		
			</div>
        </div>
		<div class="sidebar-overlay" data-reff="#sidebar"></div>
        <% include ./common/all-modals %>
        <% include ./common/footer-script %>

        <script>
             $(document).ready(function() {
                $('#allusers').DataTable();
            } );
        </script>
    </body>
</html>